<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="15dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="15dp"
    >

    <!--    app:cardCornerRadius="10dp"-->
    <LinearLayout
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_marginTop="7dp"
            android:id="@+id/sentence_eva"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:textColor="@color/maincolor"
            android:gravity="center"

            android:text="0"
            android:layout_gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingStart="38dp">


        <TextView
            android:id="@+id/sentenceEn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:lineSpacingExtra="5sp"
            android:textSize="15sp" />


        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/sentenceCn"
            android:layout_width="match_parent"
            android:lineSpacingExtra="5sp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/isShow"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            >


            <ImageView
                android:id="@+id/play_stop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:scaleType="fitStart"
                android:src="@drawable/bofang1">

            </ImageView>

            <ImageView

                android:id="@+id/eva_play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:scaleType="fitStart"
                android:src="@drawable/evaluyin0"
               >

            </ImageView>

            <ImageView

                android:id="@+id/listen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:scaleType="fitStart"
                android:layout_marginEnd="10dp"
                android:src="@drawable/erjigreen"
                android:visibility="invisible">

            </ImageView>

            <ImageView
                android:id="@+id/upload"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginTop="13dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/upload"
                android:visibility="invisible">

            </ImageView>

            <TextView
                android:id="@+id/score_eva"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/maincolor"
                android:textSize="24sp"
                android:visibility="invisible"
                />


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>