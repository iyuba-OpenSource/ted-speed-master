<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_home_ad"
   >

    <LinearLayout
        android:id="@+id/kuangjia"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/home_texttitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="bottom"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_texttime"

                    android:text="         广告"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"></TextView>

                <ImageView
                    android:visibility="gone"
                    android:layout_marginStart="65dp"
                    android:id="@+id/eye"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xianshi"></ImageView>

                <TextView
                    android:id="@+id/home_textreadsum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textSize="9sp"></TextView>




            </LinearLayout>


        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:layout_marginStart="12dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ImageView>
        </androidx.cardview.widget.CardView>



    </LinearLayout>

    </LinearLayout>


