<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"

        app:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:id="@+id/item_middlefragment_popop_window"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/middlefrangment_todaystudy_linearout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="金币兑换现金"></TextView>

                <TextView
                    android:id="@+id/pop_gold"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/item_middlefrangment_takethetest_background"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/listen"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:src="@drawable/vipnew"
                            android:layout_width="30dp"
                            android:layout_height="match_parent">

                        </ImageView>

                        <EditText
                            android:layout_marginStart="10dp"
                            android:id="@+id/gold_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textColorHint="@color/hinttext"
                            android:hint="     输入金币数"
                            android:maxLength="10"
                            android:minHeight="28dp"
                            android:minLines="3"
                            android:singleLine="true"
                            android:textStyle="bold"

                            android:textSize="16dp"
                            android:textColor="@color/black" />



                        <TextView

                            android:visibility="invisible"
                            android:id="@+id/cash_text"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" =  0.1 元"
                            android:textStyle="bold"
                            android:textColor="@color/red"
                            android:textSize="18sp"></TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/spell"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="@drawable/taketest_afterchoice_2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="听释义"
                            android:textSize="15dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="写单词"
                            android:textSize="11dp"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:visibility="invisible"
                android:id="@+id/exceed_text"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:textColor="@color/maincolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="超过已拥有金币数"
                android:textSize="11dp"></TextView>

            <LinearLayout

                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <Button
                            android:id="@+id/displaycount1"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:text="1000"
                            android:textSize="12sp"
                            android:background="@drawable/taketest_beforechoice"
                            >
                        </Button>

                        <Button
                            android:id="@+id/displaycount2"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/taketest_beforechoice"
                            android:layout_width="80dp"
                            android:textSize="12sp"
                            android:layout_height="35dp"
                            android:text="2000"
                            >
                        </Button>

                        <Button

                            android:id="@+id/displaycount3"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/taketest_beforechoice"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:textSize="12sp"
                            android:text="3000">
                        </Button>

                        <Button
                            android:id="@+id/displaycount4"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/taketest_beforechoice"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:textSize="10sp"
                            android:text="全部兑换">
                        </Button>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="1"

                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="最低1000金币，不足1000的金币将原路返回"
                            android:textSize="11dp"></TextView>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/startwrite"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/zhifu"
                    android:textStyle="normal"
                    android:text="立即兑换"
                    android:textColor="@color/white"
                    android:textSize="20dp">
                </Button>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>